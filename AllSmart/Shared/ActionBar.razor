@using MudBlazor
<div class="container-fluid p-4 my-3">
        <div class="col-12 position-relative">
            <div class="position-absolute top-0 start-0 translate-middle">
                <MudIconButton
                    Size=Size.Small
                    Style="@($"color:#{Color}; background-color:#{BackgroundColor}")"
                    Icon="@Icons.Material.Outlined.ChevronLeft"
                    OnClick="() => NavigationManager.NavigateTo(NavigationFrom)"></MudIconButton>
            </div>
            <div class="position-absolute top-0 start-50 translate-middle">
                <MudText Style="
                font-family: 'Lexend-Regular', Helvetica, Arial, sans-serif !important; 
                color: #0043A8; font-size:x-large; 
                height:100%;
                padding-top:10px; 
                padding-bottom:10px;">@Title</MudText>
            </div>
        </div>
    </div>
@code {

    [Inject]
    NavigationManager NavigationManager { get; set; }

    [Parameter]
    public string BackgroundColor { get; set; } = "0043A8";

    [Parameter]
    public string Color { get; set; } = "F6C7B8";
    
    [Parameter]
    public string NavigationFrom { get; set; } = "/";

    [Parameter]
    public string Title { get; set; }


}
